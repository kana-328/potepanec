<% provide(:title, @taxon.name) %>
<div class="main-wrapper">
  <!-- LIGHT SECTION -->
  <section class="lightSection clearfix pageHeader">
    <div class="container">
      <div class="row">
        <div class="col-xs-6">
          <div class="page-title">
            <h2><%= @taxon.name %></h2>
          </div>
        </div>
        <div class="col-xs-6">
          <ol class="breadcrumb pull-right">
            <li><%= link_to 'Home',potepan_path %></li>
            <li><%= link_to 'shop','#' %></li>
            <li class="active"><%= @taxon.name %></li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <!-- MAIN CONTENT SECTION -->
  <section class="mainContent clearfix productsContent">
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
          <%= render 'shared/product_categories',taxonomies: @taxonomies %>
          <%= render 'shared/color_serch' %>
          <%= render 'shared/size_serch' %>
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
          <%= render 'shared/sort_order' %>
          <%= render 'shared/product_list' ,products: @products %>
        </div>
      </div>
    </div>
  </section>
  <%= render 'shared/high_brand' %>
</div>
